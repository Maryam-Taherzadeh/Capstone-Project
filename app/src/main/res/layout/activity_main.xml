<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    android:background="#FFFFFF"
    tools:context="com.FoodShop.MainActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<FrameLayout
    android:id="@+id/mainFrame"


    android:layout_width="match_parent"
    android:layout_height="match_parent"/>


</RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
android:id="@+id/navview"

        app:itemShapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Nav"

        android:layout_gravity="start"
app:itemTextAppearance="@style/NavigationView"
        app:itemTextColor="@drawable/navmenutint"
        app:headerLayout="@layout/maindrawerheader"
        app:menu="@menu/maindrawer"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:textColor="@color/primary"
           android:textSize="35sp"
           android:layout_marginBottom="20dp"
           android:fontFamily="@font/stilsa"
          android:text="@string/app_name"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:fontFamily="sans-serif"
    android:textColor="@color/dark_gray"
    android:textSize="10sp"
    android:text="Version 1"/>
        </RelativeLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>